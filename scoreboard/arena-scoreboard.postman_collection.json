            "type": "text/javascript",
            "exec": [
              "pm.test('status is 200', () => pm.response.to.have.status(200));",
              "let body;",
              "try { body = pm.response.json(); } catch (e) { body = {}; }",
              "const items = body.items || body.body?.items || [];",
              "pm.test('has item', () => pm.expect(items.length).to.be.above(0));",
              "const item = items[0];",
              "const expected = JSON.parse(pm.collectionVariables.get('scores_easy') || '[]');",
              "pm.test('level matches', () => pm.expect(item.levelId).to.eql('easy-9x9'));",
              "pm.test('scores match', () => pm.expect(item.scores).to.eql(expected));",
              "const expectedHigh = Math.max.apply(null, expected);",
              "pm.test('highScore matches', () => pm.expect(item.highScore).to.eql(expectedHigh));"
            ]
          }
        }
