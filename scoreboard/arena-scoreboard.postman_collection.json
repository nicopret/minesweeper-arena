{
  "info": {
    "_postman_id": "d9c7c41b-0000-4000-a000-000000000001",
    "name": "Arena Scoreboard",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "arena-scoreboard"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://{{apiId}}.execute-api.{{region}}.amazonaws.com/{{stage}}",
      "type": "string"
    },
    { "key": "apiId", "value": "<your-api-id>", "type": "string" },
    { "key": "region", "value": "us-east-1", "type": "string" },
    { "key": "stage", "value": "prod", "type": "string" },
    { "key": "userId", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "POST /user (create or touch user identity)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"provider\": \"google\",\n  \"providerUserId\": \"test-user-123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/user",
          "host": ["{{baseUrl}}"],
          "path": ["user"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "let body;",
              "try {",
              "  body = pm.response.json();",
              "} catch (e) {",
              "  body = null;",
              "}",
              "if (body && body.userId) {",
              "  pm.collectionVariables.set('userId', body.userId);",
              "  console.log('Saved userId:', body.userId);",
              "}"
            ]
          }
        }
      ],
      "response": []
    },
    {
      "name": "GET /{userId}/minesweeper/easy-9x9",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/{{userId}}/minesweeper/easy-9x9",
          "host": ["{{baseUrl}}"],
          "path": ["{{userId}}", "minesweeper", "easy-9x9"]
        }
      },
      "response": []
    },
    {
