    "playwright": "^1.57.0",
    "prettier": "^3.3.3",
    "storybook": "^8.4.5",
    "ts-node": "10.9.1",
    "typescript": "5.9.3",
    "vitest": "^4.0.15"
  },
  "overrides": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "glob": "^10.4.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
