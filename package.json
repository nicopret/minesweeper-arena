{
  "name": "minesweeper",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "nx": "nx",
    "dev": "node scripts/with-score-env.cjs \"nx serve web\"",
    "build": "node scripts/with-score-env.cjs \"nx build web\"",
    "start": "node scripts/with-score-env.cjs \"nx start web\"",
    "storybook": "node scripts/with-score-env.cjs \"nx storybook web\"",
    "storybook:build": "node scripts/with-score-env.cjs \"nx build-storybook web\"",
    "storybook:test": "node scripts/with-score-env.cjs \"nx test-storybook web\"",
    "lint": "node scripts/with-score-env.cjs \"nx lint web\"",
    "lint:fix": "node scripts/with-score-env.cjs \"nx lint web --fix\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "husky",
    "desktop:dev": "node scripts/with-score-env.cjs \"electron frontends/desktop/main.js\"",
    "mobile:export": "node scripts/mobile-export.js",
    "mobile:sync": "cd frontends/mobile && npx cap sync",
    "mobile:add:android": "cd frontends/mobile && npx cap add android",
    "mobile:add:ios": "cd frontends/mobile && npx cap add ios",
    "mobile:open:android": "cd frontends/mobile && npx cap open android",
    "mobile:open:ios": "cd frontends/mobile && npx cap open ios",
    "server:start": "npm start --prefix score-server",
    "server:deploy-schema": "npm run prisma:migrate --prefix score-server",
    "heroku-postbuild": "npm ci --prefix score-server",
    "test": "node scripts/with-score-env.cjs \"nx test web\"",
    "test:ci": "node scripts/with-score-env.cjs \"nx test web\"",
    "test:watch": "node scripts/with-score-env.cjs \"nx test web -- --watch\"",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:full": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@reduxjs/toolkit": "^2.5.0",
    "bootstrap": "^5.3.8",
    "next": "^15.1.7",
    "@capacitor/core": "^6.1.2",
    "react": "19.2.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "19.2.1",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@nx/js": "22.2.3",
    "@nx/next": "^22.2.3",
    "@nx/storybook": "^22.2.3",
    "@nx/web": "22.2.3",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-viewport": "^8.6.14",
    "@storybook/core-server": "^8.6.14",
    "@storybook/nextjs": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/test-runner": "^0.18.0",
    "@storybook/testing-library": "^0.2.2",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "^1.15.5",
    "@swc/helpers": "^0.5.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-istanbul": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "babel-plugin-react-compiler": "1.0.0",
    "electron": "^39.2.7",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.1.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-testing-library": "^7.14.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.6",
    "jsdom": "^27.3.0",
    "@capacitor/cli": "^6.1.2",
    "@capacitor/android": "^6.1.2",
    "@capacitor/ios": "^6.1.2",
    "lint-staged": "^15.2.10",
    "nx": "^22.2.3",
    "playwright": "^1.57.0",
    "prettier": "^3.3.3",
    "storybook": "^8.6.14",
    "ts-node": "10.9.1",
    "typescript": "5.9.3",
    "vitest": "^4.0.15"
  },
  "overrides": {
    "@rollup/plugin-commonjs": "^28.0.0",
    "glob": "^10.4.5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "nx lint web --fix --files",
      "prettier --write"
    ],
    "**/*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
